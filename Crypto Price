<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>幣圈即時行情</title>
    <script charset="utf-8" src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
    <style>
        body { margin: 0; background-color: #131722; color: white; font-family: sans-serif; }
        #chart-container { height: 80vh; width: 100%; }
        .controls { padding: 15px; display: flex; justify-content: space-between; }
        button { background: #2962ff; color: white; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer; }
    </style>
</head>
<body>

    <div class="controls">
        <span id="coin-title">載入中...</span>
        <button onclick="shareLink()">分享行情給好友</button>
    </div>

    <div id="chart-container">
        </div>

    <script>
        // 1. 取得網址上的幣種參數 (預設為 BTC)
        const urlParams = new URLSearchParams(window.location.search);
        const coin = urlParams.get('coin') || 'BTC';
        const symbol = `BINANCE:${coin}USDT`;
        document.getElementById('coin-title').innerText = `${coin}/USDT 即時走勢`;

        // 2. 初始化 TradingView 圖表
        function loadChart() {
            new TradingView.widget({
                "autosize": true,
                "symbol": symbol,
                "interval": "H", // 1小時線
                "timezone": "Etc/UTC",
                "theme": "dark",
                "style": "1",
                "locale": "zh_TW",
                "container_id": "chart-container",
                "hide_side_toolbar": false,
                "allow_symbol_change": true
            });
        }

        // 3. 初始化 LIFF
        async function initLiff() {
            await liff.init({ liffId: "你的_LIFF_ID" }); // 稍後替換
            loadChart();
        }

        // 4. 分享功能
        function shareLink() {
            if (liff.isApiAvailable('shareTargetPicker')) {
                liff.shareTargetPicker([{
                    "type": "text",
                    "text": `我正在看 ${coin} 的即時行情，快來一起盯盤！\n網址：${window.location.href}`
                }]);
            }
        }

        initLiff();
    </script>
    <script type="text/javascript" src="https://s3.tradingview.com/tv.js"></script>
</body>
</html>
